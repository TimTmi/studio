rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // A user can read a feeder document if its ID is stored in their user profile
    match /feeders/{feederId} {
      allow get: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.feederId == feederId;
      // Allow creation for any authenticated user, but they can't link it to themselves without updating their profile
      allow create: if request.auth != null; 
    }

    // A user can manage schedules and logs for the feeder linked to their profile
    match /feeders/{feederId}/{documents=**} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.feederId == feederId;
    }
  }
}
