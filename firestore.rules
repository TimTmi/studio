/**
 * This ruleset enforces a strict user-ownership model for the PetPal Hub application.
 * All user data, including feeders, schedules, and logs, is stored within a
 * user-specific document tree, making security rules simple, performant, and easy to reason about.
 *
 * Core Philosophy:
 * A user has complete control over their own data tree (/users/{userId}/**) and no
 * access to anyone else's. The ruleset defaults to denying all access and then
 * selectively grants permissions only to the authenticated owner of a resource.
 *
 * Data Structure:
 * The entire data model is hierarchical, starting with the /users collection.
 *   - /users/{userId}: Stores the user's profile.
 *   - /users/{userId}/feeders/{feederId}: Stores feeders owned by the user.
 *   - /users/{userId}/feeders/{feederId}/feedingSchedules/{scheduleId}: Schedules for a specific feeder.
 *   - /users/{userId}/feeders/{feederId}/feedingLogs/{logId}: Logs for a specific feeder.
 *
 * Key Security Decisions:
 * - Strict Ownership: All access control is based on the {userId} in the path matching the authenticated user's UID.
 * - No User Enumeration: Listing documents in the top-level /users collection is explicitly forbidden to protect user privacy.
 * - Path-Based Authorization: This structure is a form of denormalization for authorization. By placing a user's data under their own path, we avoid slow and costly `get()` calls to other documents to verify ownership.
 * - Relational Integrity: On creation, rules validate that internal ID fields (e.g., `userId`, `feederId`) match the IDs in the document path. On update, these fields are enforced as immutable to prevent re-linking documents to different owners or parents.
 * - Flexible Data Shapes: In line with prototyping, these rules do not validate the specific shape or data types of documents beyond what is necessary for authorization. This allows the client-side application to iterate on its data model without requiring backend rule changes.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------

    /**
     * Checks if the current request is from an authenticated user.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the requesting user's UID matches the provided userId.
     * This is the foundation of the user-ownership model.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    /**
     * For update/delete operations, checks ownership AND that the document exists.
     * This prevents unauthorized writes to non-existent paths.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
    
    /**
     * Validates required fields for creating a new UserProfile.
     * Ensures the document's internal `id` is consistent with its path ID.
     */
    function hasValidUserProfileForCreate(userId) {
      let data = request.resource.data;
      return data.id == userId;
    }

    /**
     * Validates immutability for critical fields on a UserProfile update.
     * Prevents changing the core ownership link (`id`).
     */
    function hasValidUserProfileForUpdate() {
      let data = request.resource.data;
      return data.id == resource.data.id;
    }

    /**
     * Validates required fields for creating a new Feeder.
     * Enforces the relationship between the Feeder and its owner (User).
     */
    function hasValidFeederForCreate(userId) {
      let data = request.resource.data;
      return data.userId == userId;
    }

    /**
     * Validates immutability for critical fields on a Feeder update.
     * Prevents changing the owner of the Feeder.
     */
    function hasValidFeederForUpdate() {
      let data = request.resource.data;
      return data.userId == resource.data.userId;
    }

    /**
     * Validates required fields for creating a new FeedingSchedule.
     * Enforces the relationship between the Schedule and its parent Feeder.
     */
    function hasValidFeedingScheduleForCreate(feederId) {
      let data = request.resource.data;
      return data.feederId == feederId;
    }

    /**
     * Validates immutability for critical fields on a FeedingSchedule update.
     * Prevents changing the parent Feeder of the Schedule.
     */
    function hasValidFeedingScheduleForUpdate() {
      let data = request.resource.data;
      return data.feederId == resource.data.feederId;
    }

    /**
     * Validates required fields for creating a new FeedingLog.
     * Enforces the relationship between the Log and its parent Feeder.
     */
    function hasValidFeedingLogForCreate(feederId) {
      let data = request.resource.data;
      return data.feederId == feederId;
    }

    /**
     * Validates immutability for critical fields on a FeedingLog update.
     * Prevents changing the parent Feeder of the Log.
     */
    function hasValidFeedingLogForUpdate() {
      let data = request.resource.data;
      return data.feederId == resource.data.feederId;
    }

    // ------------------------------------------------------------------------
    // Collection Rules
    // ------------------------------------------------------------------------

    /**
     * @description Governs access to a user's own profile document.
     * @path /users/{userId}
     * @allow (create) A new user (auth.uid: 'user_abc') can create their own profile at `/users/user_abc`.
     * @allow (get) An authenticated user (auth.uid: 'user_abc') can read their own profile at `/users/user_abc`.
     * @deny (list) No user can list all documents in the `/users` collection.
     * @deny (update) A user (auth.uid: 'user_xyz') cannot update someone else's profile at `/users/user_abc`.
     * @principle Restricts access to a user's own data tree and prevents user enumeration.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Disallow listing all users for privacy
      allow create: if isOwner(userId) && hasValidUserProfileForCreate(userId);
      allow update: if isExistingOwner(userId) && hasValidUserProfileForUpdate();
      allow delete: if isExistingOwner(userId);

      /**
       * @description Governs access to the collection of feeders owned by a user.
       * @path /users/{userId}/feeders/{feederId}
       * @allow (list) A user (auth.uid: 'user_abc') can list all their feeders at `/users/user_abc/feeders`.
       * @allow (create) A user (auth.uid: 'user_abc') can create a new feeder in their own collection.
       * @deny (get) A user (auth.uid: 'user_xyz') cannot read a feeder from `/users/user_abc/feeders/feeder_123`.
       * @deny (delete) A user (auth.uid: 'user_xyz') cannot delete a feeder from another user's collection.
       * @principle Enforces strict ownership on a nested collection based on the parent path.
       */
      match /feeders/{feederId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && hasValidFeederForCreate(userId);
        allow update: if isExistingOwner(userId) && hasValidFeederForUpdate();
        allow delete: if isExistingOwner(userId);

        /**
         * @description Governs access to feeding schedules for a specific feeder.
         * @path /users/{userId}/feeders/{feederId}/feedingSchedules/{scheduleId}
         * @allow (list) A user (auth.uid: 'user_abc') can list schedules for their own feeder.
         * @allow (create) A user (auth.uid: 'user_abc') can create a new schedule for their own feeder.
         * @deny (get) A user (auth.uid: 'user_xyz') cannot read a schedule from another user's feeder.
         * @principle Inherits ownership from the top-level user path for deeply nested data.
         */
        match /feedingSchedules/{scheduleId} {
          allow get: if isOwner(userId);
          allow list: if isOwner(userId);
          allow create: if isOwner(userId) && hasValidFeedingScheduleForCreate(feederId);
          allow update: if isExistingOwner(userId) && hasValidFeedingScheduleForUpdate();
          allow delete: if isExistingOwner(userId);
        }

        /**
         * @description Governs access to feeding logs for a specific feeder.
         * @path /users/{userId}/feeders/{feederId}/feedingLogs/{logId}
         * @allow (list) A user (auth.uid: 'user_abc') can list logs for their own feeder.
         * @allow (create) A user (auth.uid: 'user_abc') can create a new log entry for their own feeder.
         * @deny (update) A user (auth.uid: 'user_xyz') cannot update a log from another user's feeder.
         * @principle Inherits ownership from the top-level user path for deeply nested data.
         */
        match /feedingLogs/{logId} {
          allow get: if isOwner(userId);
          allow list: if isOwner(userId);
          allow create: if isOwner(userId) && hasValidFeedingLogForCreate(feederId);
          allow update: if isExistingOwner(userId) && hasValidFeedingLogForUpdate();
          allow delete: if isExistingOwner(userId);
        }
      }
    }
  }
}