rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can get their own profile to validate ownership in Cloud Functions,
    // and they can update it. New users can create their profile.
    match /users/{userId} {
      allow get, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // A user can read/write to a feeder document if they are the owner.
    match /feeders/{feederId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.feederId == feederId;
    }
    
    // A user can read/write to a feeder's subcollections if they own the feeder.
    match /feeders/{feederId}/{document=**} {
       allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.feederId == feederId;
    }
  }
}
