{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user profile in the FoodFPet application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user profile."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "firstName": {
          "type": "string",
          "description": "User's first name."
        },
        "lastName": {
          "type": "string",
          "description": "User's last name."
        },
        "settings": {
          "type": "object",
          "description": "User notification settings.",
          "properties": {
            "feedingReminders": {
              "type": "boolean",
              "description": "Enable or disable feeding reminders."
            },
            "lowFoodAlerts": {
              "type": "boolean",
              "description": "Enable or disable low food alerts."
            }
          }
        },
        "feederId": {
          "type": "string",
          "description": "The ID of the single feeder linked to this user's account."
        }
      },
      "required": [
        "id",
        "email"
      ]
    },
    "Feeder": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Feeder",
      "type": "object",
      "description": "Represents a pet feeder device.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the feeder."
        },
        "ownerId": {
            "type": "string",
            "description": "The UID of the user who owns this feeder."
        },
        "name": {
            "type": "string",
            "description": "Name of the feeder."
        },
        "location": {
            "type": "string",
            "description": "Location of the feeder."
        },
        "petType": {
            "type": "string",
            "enum": ["dog", "cat"]
        },
        "status": {
            "type": "string",
            "enum": ["online", "offline"]
        },
        "bowlLevel": {
            "type": "number",
            "description": "Percentage of food remaining in the bowl."
        },
        "storageLevel": {
            "type": "number",
            "description": "Percentage of food remaining in the main storage container."
        },
        "currentWeight": {
            "type": "number",
            "description": "The current weight of food in the storage container, in grams."
        },
        "weeklySchedule": {
            "type": "object",
            "description": "Recurring weekly feeding schedule.",
            "properties": {
                "sunday":    { "type": "array", "items": { "type": "string", "description": "Time in HH:mm format" } },
                "monday":    { "type": "array", "items": { "type": "string", "description": "Time in HH:mm format" } },
                "tuesday":   { "type": "array", "items": { "type": "string", "description": "Time in HH:mm format" } },
                "wednesday": { "type": "array", "items": { "type": "string", "description": "Time in HH:mm format" } },
                "thursday":  { "type": "array", "items": { "type": "string", "description": "Time in HH:mm format" } },
                "friday":    { "type": "array", "items": { "type": "string", "description": "Time in HH:mm format" } },
                "saturday":  { "type": "array", "items": { "type": "string", "description": "Time in HH:mm format" } }
            }
        }
      },
      "required": ["id", "ownerId", "name"]
    },
    "FeedingLog": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "FeedingLog",
      "type": "object",
      "description": "Represents a log entry for a feeding event.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the feeding log entry."
        },
        "feederId": {
          "type": "string",
          "description": "ID of the feeder this log belongs to."
        },
        "timestamp": {
          "type": "string",
          "description": "The time the feeding event occurred.",
          "format": "date-time"
        },
        "portionSize": {
          "type": "number",
          "description": "The amount of food dispensed in grams."
        }
      },
      "required": [
        "id",
        "feederId",
        "timestamp",
        "portionSize"
      ]
    },
    "Notification": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Notification",
        "type": "object",
        "description": "Represents a notification for a user about a feeder event.",
        "properties": {
            "id": {
                "type": "string",
                "description": "Unique identifier for the notification."
            },
            "feederId": {
                "type": "string",
                "description": "ID of the feeder this notification relates to."
            },
            "timestamp": {
                "type": "string",
                "format": "date-time",
                "description": "The time the notification was created."
            },
            "status": {
                "type": "string",
                "enum": ["success", "failed"],
                "description": "The status of the event."
            },
            "message": {
                "type": "string",
                "description": "The notification message to be displayed to the user."
            }
        },
        "required": ["id", "feederId", "timestamp", "status", "message"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "Stores user profile information.",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier for the user. Corresponds to the Firebase Auth UID."
            }
          ]
        }
      },
      {
        "path": "/feeders/{feederId}",
        "definition": {
          "entityName": "Feeder",
          "schema": {
            "$ref": "#/backend/entities/Feeder"
          },
          "description": "Stores all data and state for a specific feeder device, including its weekly schedule.",
          "params": [
             {
              "name": "feederId",
              "description": "The unique identifier for the feeder device."
            }
          ]
        }
      },
      {
        "path": "/feeders/{feederId}/feedingLogs/{logId}",
        "definition": {
          "entityName": "FeedingLog",
          "schema": {
            "$ref": "#/backend/entities/FeedingLog"
          },
          "description": "Stores feeding logs for a specific feeder.",
          "params": [
            {
              "name": "feederId",
              "description": "The unique identifier for the feeder."
            },
            {
              "name": "logId",
              "description": "The unique identifier for the feeding log entry."
            }
          ]
        }
      },
      {
        "path": "/feeders/{feederId}/notifications/{notificationId}",
        "definition": {
            "entityName": "Notification",
            "schema": {
                "$ref": "#/backend/entities/Notification"
            },
            "description": "Stores notifications for a specific feeder.",
            "params": [
                {
                    "name": "feederId",
                    "description": "The unique identifier for the feeder."
                },
                {
                    "name": "notificationId",
                    "description": "The unique identifier for the notification."
                }
            ]
        }
      }
    ],
    "reasoning": "The data model is now normalized. User data is in `/users/{userId}`. Device data is in a separate top-level collection `/feeders/{feederId}`. The user's profile contains a `feederId` to link them to their device. The weekly recurring schedule is stored on the feeder document itself. Notifications and logs are stored in subcollections under each feeder."
  }
}
